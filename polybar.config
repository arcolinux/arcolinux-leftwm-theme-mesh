[color]
background = ${xrdb:color0:#222}
;background = #1F1F1F
;background-alt = #444
foreground = ${xrdb:color7:#222}
;foreground = #FFFFFF
foreground-alt = #8F8F8F
primary = #f15495
secondary = #E53935
alert = #bd2c40
modulefg = #1F1F1F
modulefg-alt = #f7f7f7

trans = #00000000
white = #FFFFFF
black = #000000
tray-background = ${xrdb:color0:#222}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/barbase]
;width = ${env:width}
width = 100%
height = 20
offset-x = 0
offset-y = 0
monitor = ${env:monitor}
fixed-center = true
bottom = true

background = ${color.background}
foreground = ${color.foreground}

;radius = 8.0
;radius-top = 8.0
;radius-bottom = 8.0

line-size = 3
line-color = #f00

;border-size = 0
;border-bottom =1
;border-color = #00000000

;padding = 2
;padding-left = 2
;padding-right = 2

module-margin-left = 1
module-margin-right = 1

;module-margin = 1

font-0 = "SauceCodePro Nerd Font:size=11:weight=semibold;3"
;choices : cpu memory wlan eth pulseaudio temperature sysmenu
modules-center = 
modules-right = 

[bar/mainbar0]
inherit = bar/barbase
modules-left = launcher workspace0
tray-position = right
tray-detached = false
tray-maxsize = 20
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 1
tray-scale = 1.0
tray-background = ${color.tray-background}

[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

[bar/mainbar1]
inherit = bar/barbase
modules-left = launcher workspace1

[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

[bar/mainbar2]
inherit = bar/barbase
modules-left = launcher workspace2

[module/workspace2]
type = custom/script
exec = leftwm-state -w 2 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

[bar/mainbar3]
inherit = bar/barbase
modules-left = launcher workspace3

[module/workspace3]
type = custom/script
exec = leftwm-state -w 3 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

#####################################################################

[module/launcher]
type = custom/text
content = 者

; "content" has the same properties as "format-NAME"
content-background = ${color.primary}
content-foreground = ${color.module-fg}
content-padding = 2

click-left = ~/.config/leftwm/themes/current/polybar/scripts/launcher.sh &
click-right = arcolinux-logout

[module/cpu]
type = internal/cpu
interval = 2
;format-prefix = " "
;format-prefix-foreground = ${color.foreground}
;format-foreground = ${color.modulefg}
;format-background = ${color.background}
;format-underline = #f90000
label = CPU %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
;format-prefix = " "
;format-prefix-foreground = ${color.foreground-alt}
;format-underline = #4bffdc
;format-foreground = ${color.modulefg}
;format-background = ${color.background}
label = MEM %percentage_used%%

[module/wlan]
type = internal/network
interface = net1
interval = 3.0

format-connected = <ramp-signal> <label-connected>
;format-connected-foreground = ${color.modulefg}
;format-connected-background = ${color.background}
;format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${color.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${color.foreground-alt}

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

;format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${color.foreground-alt}
label-connected = IP %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${color.foreground-alt}
;format-connected-background = ${color.background}
;format-connected-foreground = ${color.modulefg}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
format-volume-background = ${color.background}
format-volume-foreground = ${color.foreground}
label-volume = VOL %percentage%%
label-volume-foreground = ${color.foreground}

label-muted =  muted
label-muted-foreground = #888

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${color.foreground-alt}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-underline = #f50a4d
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}
format-background = ${color.background}
format-foreground = ${color.foreground}

label = %temperature-c%
label-warn =    %temperature-c%
label-warn-foreground = ${color.secondary}

[module/date]
type = internal/date
interval = 5
time = %H:%M %p
time-alt = %d/%m/%Y %H:%M %p
;format-prefix = 
;format-prefix-foreground = ${color.foreground-alt}
;format-background = ${color.background}
;format-foreground = ${color.modulefg}
;format-underline = #0a6cf5
label = %date% %time%

[module/kernel]
type = custom/script
exec = uname -r
tail = false
interval = 1024

format-foreground = ${color.foreground}
format-background = ${color.background}
format-prefix = "  "
format-prefix-foreground = #0084FF
format-underline = #0084FF

click-left = xfce4-taskmanager
click-middle = xfce4-taskmanager
click-right = alacritty -e bpytop

[module/quote]
type = custom/text
content = Follow the white rabbit. Knock. Knock. 
content-foreground = ${color.foreground}
content-background = ${color.background}
content-prefix = "  "
content-prefix-foreground = ${color.foreground}
;content-underline = ${color.foreground}

[module/arch-updates]
type = custom/script
exec = ~/.config/leftwm/themes/current/scripts/check-arch-updates.sh
interval = 1000
label = Arch: %output%
format-foreground = ${color.foreground}
format-background = ${color.background}
format-prefix = "  "
format-prefix-foreground = #FFBB00
format-underline = #FFBB00
click-left = urxvt
click-middle = xfce4-terminal
click-right = alacritty

[module/aur-updates]
type = custom/script
exec = ~/.config/leftwm/themes/current/scripts/check-aur-updates.sh
interval = 1000
label = Aur: %output%
format-foreground = ${color.foreground}
format-background = ${color.background}
format-prefix = "  "
format-prefix-foreground = #FFBB00
format-underline = #FFBB00
click-left = urxvt
click-middle = xfce4-terminal
click-right = alacritty

[module/application-menu]
type = custom/text
content = "  "
content-foreground = #FFF
click-left = xfce4-appfinder
click-middle = xfce4-appfinder
click-right = rofi -show drun

[module/links]
type = custom/text
;content-background = ${color.background-alt}
content-foreground = ${color.foreground}
content-padding = 2

[module/discord]
inherit = module/links
content = ﱲ
click-left = discord &
click-right = killall Discord &

[module/github]
inherit = module/links
content = 
click-left = exo-open https://www.github.com/ &

[module/gmail]
inherit = module/links
content = 
click-left = exo-open https://mail.google.com/ &

[module/google]
inherit = module/links
content = 
click-left = exo-open https://www.google.com/ &

[module/pamac]
inherit = module/links
content = ﳺ
click-left = pamac-manager &

[module/reddit]
inherit = module/links
content = 
click-left = exo-open https://www.reddit.com/ &

[module/telegram]
inherit = module/links
content = 頻
click-left = telegram-desktop &
click-right = killall telegram-desktop &

[module/twitter]
inherit = module/links
content = 
click-left = exo-open https://www.twitter.com/ &

[module/sysmenu]
type = custom/text
content = "  襤  "
content-background = ${color.primary}
content-foreground = ${color.module-fg}
click-left = arcolinux-logout
click-right = arcolinux-logout
